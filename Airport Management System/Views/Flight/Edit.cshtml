@model Airport_Management_System.Models.FlightDto

@{
    ViewBag.Title = "Edit";
}

<h1>Edit Flight Info</h1>
<a type="button" class="btn btn-warning" href="/Flight/List">Back to flight list</a>
<a href="/Flight/Details/@Model.FlightId" type="button" class="btn btn-info">Back to @Model.FlightNum</a>

<form action="/Flight/Update/@Model.FlightId" method="POST">
    <div style="display:none;">
        @* Pass through the flight ID *@
        <input type="number" name="FlightId" value="@Model.FlightId" />
    </div>
    <div class="form-group">
        <label for="Airline">Airline: </label>
        <input type="text" name="Airline" placeholder="Air Canada" value="@Model.Airline" id="Airline" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="FlightNum">Flight number: </label>
        <input type="text" name="FlightNum" placeholder="AC3110" value="@Model.FlightNum"  id="FlightNum" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="Terminal">Terminal: </label>
        <input type="number" name="Terminal" placeholder="1"  value="@Model.Terminal" id="Terminal" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="Gate">Gate: </label>
        <input type="text" name="Gate" placeholder="C15" value="@Model.Gate"  id="Gate" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="Destination">Destination: </label>
        <input type="text" name="Destination" placeholder="Sudbury"  value="@Model.Destination" id="Destination" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="DepartureTime">DepartureTime: </label>
        <input type="datetime-local" name="DepartureTime" value="@Model.DepartureTime" id="DepartureTime" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="ArrivalTime">Arrival Time: </label>
        <input type="datetime-local" name="ArrivalTime" value="@Model.ArrivalTime" id="ArrivalTime" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="FlightStatus">FlightStatus: </label>
        <input type="text" name="FlightStatus" value="@Model.FlightStatus"  id="FlightStatus" class="form-control"/>
    </div>
    <div>
        <button type="submit" class="btn btn-primary" value="Update Flight">Submit</button>
        <a href="/Flight/Details/@Model.FlightId" type="button" class="btn btn-danger">Cancel</a>
    </div>
</form>
